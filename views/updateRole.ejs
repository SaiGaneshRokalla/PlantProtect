<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Profile</title>
    <link rel="shortcut icon" href="../uploads/leaf-svgrepo-com.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script> -->

</head>
<body class="bg-gradient-to-br from-gray-900 to-purple-900 w-full min-h-screen">
    <!-- Navbar -->
    <nav class="p-4 shadow-md border-b border-purple-400">
        <div class="max-w-screen-xl px-16 mx-auto flex justify-between items-center text-white">
            <h1 class="text-2xl font-semibold flex items-center space-x-2">
                <span>PlantProtect</span>
            </h1>
            <div class="flex space-x-4">
                <a href="/upload" class="text-sm bg-purple-700 hover:bg-purple-500 px-4 py-2 rounded">Home</a>
                <a href="/profile" class="text-sm bg-purple-700 hover:bg-purple-500 px-4 py-2 rounded">Profile</a>
                <a href="/updateRole" class="text-sm bg-purple-700 hover:bg-purple-500 px-4 py-2 rounded">Update profile</a>
                <% if (user && user.role !== 'user') { %>  
                <a href="/admin" class="text-sm bg-purple-700 hover:bg-purple-500 px-4 py-2 rounded">Admin</a>
                <% } %>
                <a href="/logout" class="text-sm bg-purple-700 hover:bg-purple-500 px-4 py-2 rounded">Logout</a>
            </div>
        </div>
    </nav>
    <!-- Main Content -->
    <div class="flex items-center justify-center h-[80vh] bg-gradient-to-br from-gray-900 to-purple-900">
        <div class="bg-white p-6 rounded-lg shadow-md w-96">
            <h2 class="text-xl font-semibold mb-4">Update Your Profile</h2>
            <form action="/config" method="POST" class="space-y-4">
                <label class="block">
                    <span class="text-gray-700">Full Name</span>
                    <input type="text" name="name" value="<%= user.name %>" class="block w-full mt-1 p-2 border rounded-lg" required>
                </label>
                <label class="block">
                    <span class="text-gray-700">Phone</span>
                    <input type="text" name="phone" value="<%= user.phone %>" class="block w-full mt-1 p-2 border rounded-lg" required>
                </label>
                <label class="block">
                    <span class="text-gray-700">Location</span>
                    <input type="text" name="location" value="<%= user.location %>" class="block w-full mt-1 p-2 border rounded-lg" required>
                </label>
                <label class="block">
                    <span class="text-gray-700">Gender</span>
                    <select name="gender" class="block w-full mt-1 p-2 border rounded-lg">
                        <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Male</option>
                        <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Female</option>
                        <option value="other" <%= user.gender === 'other' ? 'selected' : '' %>>Other</option>
                    </select>
                </label>
                <button type="submit" class="bg-pink-700 text-white px-4 py-2 rounded w-full hover:bg-pink-600">Update</button>
            </form>
        </div>
    </div>
    
    <footer class="bg-gray-900 p-4 shadow-md text-center text-white fixed bottom-0 w-full mt-28 border-t border-purple-400">
        &#169; PlantProtect
    </footer>

    <script>
        // Function to alert when user clicks on logout
        function confirmLogout(event) {
            event.preventDefault();
            if (confirm("Are you sure you want to logout?")) {
                window.location.href = event.target.href;
            }
        }

        // Attach the confirmLogout function to the logout link
        document.querySelector('a[href="/logout"]').addEventListener('click', confirmLogout);
    </script>
</body>
</html>